@model IEnumerable<PetShop.Models.Pet>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.imageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateRecieved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descriptionShort)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.imageUrl" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateRecieved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descriptionShort)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
         
        </td>
    </tr>
}

</table>
